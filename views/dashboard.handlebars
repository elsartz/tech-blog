<header class="hero">
      
      <nav >
        <a class="btn-back" href="/">Home</a>
        <button class="btn-back" href="/dashboard">dashboard</button>
        {{#if loggedIn}}        
        <button id="logout" class="btn-back">logout</button>
        {{else}}
        <a class="btn-back" href="/login">login</a>
        {{/if}}
      </nav>
      </br>
      <h1 class="app-title">
        <a href="/dashboard/">Your Dashboard</a>
      </h1>
    </header>
<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      {{!-- <label for="post-content">Link</label> --}}
      <label for="post-content">Content</label>
      <input id="post-content" name="post-content" type="textarea"/>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  {{!-- <h2>Your Posts</h2> --}}
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>